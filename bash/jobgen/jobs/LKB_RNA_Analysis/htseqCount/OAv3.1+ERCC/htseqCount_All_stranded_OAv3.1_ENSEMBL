samtools view ${INFILE}.bam | htseq-count --mode=intersection-nonempty - ~/PhD/RefGenomes/OvisAries/Ovis_aries.Oar_v3.1.88.gtf > ${INFILE}_ENSEMBL_IntrsctNonempty_stranded.counts
